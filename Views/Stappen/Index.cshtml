@model IEnumerable<BrightlandsCasus.Models.Stap>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StappenBeschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LokaalId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StappenBeschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LokaalId)
            </td>
            <td>
                Connecties:
                @foreach (var connectie in item.StapConnecties)
                {
                    <br>
                    @connectie.RouteUitelg
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
