@model BrightlandsCasus.Models.Verdieping

<link rel="stylesheet" href="~/css/BedLokaalOverzicht.css" />

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Verdieping</th>
            <th>Lokalen</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (Verdieping verdieping in ViewBag.verdiepingen)
            {
                <tr>
                    <td>
                        @verdieping.Id
                    </td>
                    <td>
                        @verdieping.Beschrijving
                    </td>
                    <td>
                        <form asp-action="VerdiepingLokaal" asp-route-id="@verdieping.Id">
                            <button type="submit" class="btn btn-success">Lokalen</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<button class="button-80" role="button" onclick="location.href='@Url.Action("Medewerker", "Home")'">Terug</button>
